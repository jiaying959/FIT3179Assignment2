{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Earthquakes in the world larger than magnitude of 5.5 in 2019",
  "layer": [
    {
      "data": {
        "url": "https://jiaying959.github.io/FIT3179Assignment2/data/au-states-topo.json",
        "format": {"type": "topojson", "feature": "austates"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://jiaying959.github.io/FIT3179Assignment2/data/aus.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "tooltip": {"field": "mag", "type": "quantitative"},
        "color": {
          "field": "mag",
          "type": "quantitative",
          
          "scale": {
            "type":"threshold",
            "domain":[4,5,6],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            }
        },
        "size": {
          "field": "depth",
          "type": "quantitative",
          "scale": {"domain": [0, 40]}
        }
      }
    }
  ],
  "config": {}
}