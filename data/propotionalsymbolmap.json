{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Earthquakes in the world larger than magnitude of 5.5 in 2019",
  "layer": [
    {
      "data": {
        "url": "https://jiaying959.github.io/FIT3179Assignment2/data/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://jiaying959.github.io/FIT3179Assignment2/data/2019.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "color": {
          "field": "depth",
          "type": "quantitative",
          "scale": {"scheme": "blues"}
        },
        "size": {
          "field": "mag",
          "type": "quantitative",
          "scale": {"domain": [5.5,8]}
        }
      }
    }
  ],
  "config": {}
}

