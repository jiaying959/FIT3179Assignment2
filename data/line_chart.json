{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 500,
    "height": 400,
    "title": "Earthquakes in Australia for eahc month from 1980 to 2020",
    "data": {
    "url": "https://jiaying959.github.io/FIT3179Assignment2/data/aus.csv"
    },
    "params": [
    {
    "name": "year_above",
    "value": 1980,
    "bind": {
    "input": "range",
    "min": 1980,
    "max": 2020,
    "step": 1,
    "name": "Year: "
    }
    }],
   "transform": [
       {"filter": "datum.year >= year_above"}],
    "mark": {"type":"line","point":true},
    "encoding": {
       "x": {"field": "month", "type": "ordinal"},
       "y": {
         "aggregate": "count", "field": "month",
         "title": "Number of earthquakes"
       },
       "tooltip": [
       
        {"aggregate": "count", "field": "month","title":"counts of earthquakes"}
    ]
     }
   }