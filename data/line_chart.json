{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 140,
  "title":{
      "text":["Earthquakes of Magnitude Larger Than 4 in Australia","For Each Year From 1980 to 2020"],
      "fontSize":18,
      "baseline":"middle",
      "lineHeight":30
      
  },
  "data": {
    "url": "https://jiaying959.github.io/FIT3179Assignment2/data/aus.csv"
  },
  "transform": [{
      "aggregate": [{
       "op": "count",
       "field": "year",
       "as": "year_count"
      }],
      "groupby": ["year"]
    }],
  "encoding": {
    "x": {"field": "year", "type": "ordinal","timeUnit":"year","title":"Year"},
    "y": {
      "field": "year_count",
      "sort":"descending",
      "title": "Number of earthquakes"
    },
    "tooltip": [
      {"field": "year_count", "title": "Counts of earthquakes","format":","},{"field":"year","type": "ordinal","timeUnit":"year","title":"Year"}
    ]
  },
  "layer": [
  {"mark": {"type": "line","point":true}
  }

  ]
}